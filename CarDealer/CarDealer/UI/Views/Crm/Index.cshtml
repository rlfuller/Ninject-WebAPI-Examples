@model Models.Response<List<Models.VehicleVM>>

@{
    ViewBag.Title = "Index";
}
<br>
<div class="container">
    @{ int count = 1;}
    @{ int total = Model.Data.Count();}
    @foreach (var item in Model.Data)
    {
        if (count % 3 == 0 || count == 1)
        {
            @:<div class="row"><div class="col-md-12">
        }
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <h4 class="text-center"><span class="label label-info">@item.MakeName</span></h4>
                <img src="@item.ImageUrl" style="width:300px;" class="img-responsive">
                <div class="caption">
                    <div class="row">
                        <div class="col-md-6 col-xs-6">
                            <h3>@item.MakeName @item.ModelName</h3>
                        </div>
                        <div class="col-md-6 col-xs-6 price">
                            <h3>
                                <label>$@item.SellingPrice</label>
                            </h3>
                        </div>
                    </div>
                    <p>@item.AdHeader</p>
                    <p>@item.AdBody</p>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.ActionLink("Details", "Details", "Crm", new { id = item.VehID }, new { @class = "btn btn-primary btn-product" })
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Inquire", "Inquire", "Crm", new { id = item.VehID }, new { @class = "btn btn-success btn-product", @style = "float: right" })
                        </div>
                    </div>

                    <p> </p>
                </div>
            </div>
        </div>
        if (count % 3 == 0 || count == total)
        {
            @:</div></div>
        }
        { count = count + 1; }

    }
</div>